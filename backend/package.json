    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/bcryptjs": "^2.4.6",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
